/* ==========================================================================
   modais
   ========================================================================== */

.smt-modal {
	position: fixed;
	height:100%;
	width:100%;
	left:0;
	top:0;
	transform:translateX(-100%);
	z-index: 20;
}

.smt-modal-backdrop  {
	position: fixed;
	background:rgba(255,255,255,0.9);
	top:0;
	bottom:0;
	left:0;
	right:0;
	z-index: 20;
	opacity: 0;
	transform:translateX(-100%);
}

.smt-modal-wrapper {
	position: absolute;
	top:50%;
	left:50%;
	transform:translate(-50%,-50%);
	width:100%;
	max-width:620px;
	max-height: 492px;
	@media screen and ($fs-grid-mq-max-lg) {
		top: 0;
		transform: none;
		left: 0;
		max-width: none;
		max-height: none;
		height: 100%;
	}
}

.smt-modal-popup {
	background: lighten($linkColor,40%);
	box-shadow: 0 0 8px 2px #d0d0d0;
	border: solid 5px #ffffff;
	border-radius: 5px;
	padding: 1em;
    max-height: 492px;
    overflow-y: auto;
	transition: all 0.3s ease-out 0.3s;
	opacity: 0;
	@media screen and ($fs-grid-mq-max-lg) {
    	max-height: 100%;
		height: 100%;
		box-shadow: none;
		padding: 0.5em;
	}
}

.smt-modal-body {
	margin: 0 -1em;
	padding: 0 1em 1em;
	@media screen and ($fs-grid-mq-max-lg) {
		-webkit-overflow-scrolling: touch;
		z-index: 0;
		position: relative;
		max-height: 100vh;
		overflow-y: auto;
		overflow-x: hidden;
		padding-bottom: 2em;
		margin: 0;
	}
}

.smt-modal-title {
	font-size:2.2em;
	margin:0;
	font-weight: normal;
	text-transform: uppercase;
	@media screen and ($fs-grid-mq-max-lg) {
		font-size:1.5em;
	}
}

.smt-modal-header {
	text-align: center;
	@media screen and ($fs-grid-mq-max-lg) {
		padding:0.5em 1.5em;
		background:#fff;
		z-index: 2;
		margin: -0.5em -0.5em 0;
		width: calc(100% + 1em);
	}
}

.smt-modal-content {
	margin: 2em auto 1em;
	text-align: center;
	@media screen and ($fs-grid-mq-max-lg) {
		margin-top: 1em;
	}
	.smt-modal-login & {
		max-width: 320px;
	}
	.smt-modal-signup &, .smt-modal-signup-continue & {
		max-width: 460px;
	}
	.smt-modal-change-password & {
		max-width: 460px;
	}
}

.smt-modal-signup-continue {
	.smt-input-holder {
		width: calc(100% - 0.5em);
	}
	.smt-input-holder:nth-child(3), .smt-input-holder:nth-child(4), .smt-input-holder:nth-last-child(2), .smt-input-holder:nth-last-child(3), .smt-input-holder:nth-last-child(4), .smt-input-holder:nth-last-child(5) {
		width: calc(50% - 0.5em);
	}
	.smt-form-label {
		text-align: left;
		display: block;
		padding-left: 1.2rem;
	}
	@media screen and ($fs-grid-mq-max-lg) {
