@import 'grids';
@import 'fonts';
/* ==========================================================================
   Variáveis
   ========================================================================== */
//Fontes:
$textFont: "noyh";
$accentFont: "noyh";
//Cores:
$textColor: #707070; // cor do texto
$linkColor: #69b8a4; // cor dos links
$azulSmart: #006aa7; // cor de destaque
$laranjaSmart: #dd997c;
$azulBgSmart: #daecfb;
$actionColor: #6c2812; // cor para call-to-actions
$negativeazulSmart: #ffffff; // cor de destaque em cenários negativos
/* ==========================================================================
   Mixins
   ========================================================================== */
@mixin marginGrids($top, $bottom: $top) {
	margin-top: $top;
	margin-bottom: $bottom;
}

@mixin size($width, $height: $width) {
	width: $width;
	height: $height;
}

@mixin background-opacity($color, $opacity: 0.3) {
	background: $color;
	/* The Fallback */
	background: rgba($color, $opacity);
}
@mixin optional-at-root($sel) {
  @at-root #{if(not &, $sel, selector-append(&, $sel))} {
	@content;
  }
}

@mixin placeholder {
  @include optional-at-root('::-webkit-input-placeholder') {
	@content;
  }

  @include optional-at-root(':-moz-placeholder') {
	@content;
  }

  @include optional-at-root('::-moz-placeholder') {
	@content;
  }

  @include optional-at-root(':-ms-input-placeholder') {
	@content;
  }
}

@mixin smt-section($titlecolor) {
	margin:3em 0;
	@media screen and ($fs-grid-mq-max-lg) {
		@include marginGrids(1.5em, 0);
	}
	.smt-section-wrapper {
		@include fs_row;
	}
	.smt-section-title {
		color: $titlecolor;
		font-size: 2.5em;
		margin:0 0 -0.3em;
		line-height: 1;
		font-weight: lighter;
		@media screen and ($fs-grid-mq-max-lg) {
			font-size: 2em;
		}
	}
	.smt-section-wrapper {
		@include fs_row;
		padding:3em 0;
        &.smt-news-list-wrapper {
            padding: 0;
        }
		@media screen and ($fs-grid-mq-max-lg) {
			padding-top:1.5em;
			padding-bottom:1.5em;
		}
	}
	.smt-section-actions {
		text-align: center;
		font-size: 1.1em;
	}
}

@mixin smt-background-section($bgcolor, $titlecolor) {
	@include smt-section($titlecolor);
	background: $bgcolor;
	margin:3em 0;
	text-align: center;
}

@mixin smt-simple-link {
	transition:color 0.3s;
	color:$linkColor;
	text-decoration: none;
	font-weight: bolder;
	&:hover {
		color:darken($linkColor,15%);
	}
}

/* ==========================================================================
   Helper classes
   ========================================================================== */
.hidden {
	display: none !important;
	visibility: hidden;
}
.visuallyhidden {
	border: 0;
	clip: rect(0 0 0 0);
	height: 1px;
	margin: -1px;
	overflow: hidden;
	padding: 0;
	position: absolute;
	width: 1px;
}

.visuallyhidden.focusable:active,
.visuallyhidden.focusable:focus {
	clip: auto;
	height: auto;
	margin: 0;
	overflow: visible;
	position: static;
	width: auto;
}

.invisible {
	visibility: hidden;
}

.clearfix:before,
.clearfix:after {
	content: " ";
	display: table;
}

.clearfix:after {
	clear: both;
}

.clearfix {
	*zoom: 1;
}

.lum-actions {
	display: none;
}
/* ==========================================================================
   Global definitions
   ========================================================================== */
html {
	width: 100%;
}
body {
	font-family: 'noyh';
	font-size:17px;
	line-height: 1.3;
	border-top:3px solid #6cb1e9;
	overflow-x: hidden;
	width: 100%;
	color:$textColor;
}

*, *:before, *:after {
	box-sizing:border-box;
}

a[href]:not([class]){
	@include smt-simple-link;
}

h1, h2 {
	text-transform: uppercase;
}

.smt-main-button {
	display: inline-block;
	border: 2px solid $linkColor;
	background: $linkColor;
	color: #ffffff;
	padding: 0.5em 1em;
	border-radius: 2em;
	font-weight: bolder;
	line-height: 1;
	text-decoration: none;
	transition: all 0.5s;
	margin: 0 0 0.5em;
	min-width: 4em;
	&:hover {
		border-color: darken($linkColor,20%);
		background: darken($linkColor,20%);
	}
}

.smt-secondary-button {
	@extend .smt-main-button;
	background: none;
	color:$linkColor;
	&:hover {
		border-color: darken($linkColor,20%);
		color: darken($linkColor,20%);
		background:lighten($linkColor,35%);
	}
}

.smt-secondary-link {
	display: inline-block;
	margin:0 0.5em;
	color: $linkColor;
	font-weight: bolder;
	line-height: 1;
	text-decoration: none;
	transition:all 0.5s;
	&:hover {
		color:darken($linkColor, 20%);
	}
}

.smt-phone-link {
	color: #006aa7;
	text-decoration: none;
	font-size: 1.5em;
	&:first-child {
		padding-left: 1em;
		background: url(../img/phone-icon.png) no-repeat left center;
		background-size: auto 0.8em;
	}
	&:not(:first-child):before {
		content: " / ";
		color: $textColor;
	}
	@media screen and ($fs-grid-mq-min-lg) {
		pointer-events: none;
	}
}

.smt-logo {
	background:url(../img/logo-smart.svg) no-repeat center center;
	background-size: contain;
	width:158px;
	height:46px;
	text-indent:-9999px;
	overflow: hidden;
	display: block;
}

.smt-input {
	display: block;
	background: #e2f0fb;
	border-radius:1em;
	border:none;
	color: $azulSmart;
	padding:0.3em 1em;
	line-height: 1;
	border:2px solid transparent;
	transition: all 0.3s;
	width: 100%;
	height: 2em;
	box-sizing:border-box !important;
	@include placeholder {
		color: #87d3f4;
	}
	&:focus {
		outline: none;
		border: 2px solid $azulSmart;
	}
	&.smt-search {
		padding-left:2em;
		background-image: url(../img/icon-search.svg);
		background-repeat: no-repeat;
		background-position: left 0.5em center;
		background-size: 1em 1em;
	}
	&[rows="4"] {
		max-width: 100%;
		height: auto;
	}
	&.selectize-control {
		padding: 0;
		border-radius: 0;
		background: transparent;
		border: none;
		text-align: left;
		.selectize-input {
			border: solid 2px transparent;
			background: #e2f0fb !important;
			padding: 0 0 0 1em;
			height: 2em;
			box-shadow: none;
			border-radius: 1em;
			font-size: 17px;
			input, .item {
				font-size: 1rem;
				height: 100%;
				line-height: 30px;
				color: $azulSmart;
				@include placeholder {
					color: #87d3f4;
				}
			}
			&:after {
				border-color: #a8a1cc transparent;
			}
			&.input-active.dropdown-active {
				border-color: $azulSmart;
				border-bottom-color: transparent;
				border-bottom-left-radius: 0;
				border-bottom-right-radius: 0;
				&:before {
					content: none;
				}
			}
		}
		.selectize-dropdown {
			width: 100% !important;
			height: auto;
			border-color: $azulSmart;
			border-top: 0;
			border-top-left-radius: 0;
			border-top-right-radius: 0;
			font-size: 17px;
			.option {
				font-size: 1rem;
				color: $azulSmart;
				padding: 0.25em 0;
				background: transparent !important;
				&.active {
					font-weight: bold;
				}
			}
		}
	}
	&[readonly] {
		color: lighten($textColor, 20%);
	}
}

.smt-toggler {
	&:focus {
		& ~ .smt-icon-toggler {
			outline:1px dotted $linkColor;
		}
	}
}

.smt-icon-toggler {
	color:$linkColor;
	font-weight: bolder;
	display:block;
	cursor:pointer;
	line-height: 1;
	position: relative;
	padding: 0.5em 0.5em 0.5em 2em;
	text-align: left;
	transition: color 0.5s;
	&:before {
		content:'';
		display: inline-block;
		height: 1.2em;
		width:1.2em;
		position: absolute;
		left: 0.5em;
		top:50%;
		transform:translateY(-50%);
		background-size: contain;
	}
	@media screen and ($fs-grid-mq-max-lg) {
		padding:0.5em;
		text-indent: -9999px;
		width:1.2em;
		&:before {
			left:0;
		}
	}
	&:hover {
		color: darken($linkColor,10%);
	}
}

.smt-carousel-wrapper {
	position: relative;
}

.slick-arrow {
	position: absolute;
	-webkit-appearance: none;
	border: none;
	background: #fff url(../img/icon-arrow-left.svg) no-repeat center center;
	background-size: 1.5em 1.5em;
	width: 2.5em;
	height: 2.5em;
	text-indent: -9999px;
	border-radius: 50%;
	top:50%;
	transform:translateY(-50%);
	z-index: 3;
	&.slick-prev {
		left:0;
	}
	&.slick-next {
		right:0;
		background-image: url(../img/icon-arrow-right.svg);
	}
	@media screen and ($fs-grid-mq-max-md) {
		background-size: 1em 1em;
		width: 1.5em;
		height: 1.5em;
	}
}

.smt-smile {
	display: inline-block;
	background: url(../img/smart-sorriso.svg) no-repeat bottom right;
	background-size: 0.8em;
	padding: 0 0.25em 0.15em 0;
	margin-bottom: -0.15em;
	line-height: 1;
}

.smt-input-holder {
	position: relative;
	margin:1em 0 0;
	width: 100%;
	flex-basis:auto;
}

.smt-label-checkbox {
	cursor: pointer;
	display: inline-block;
	margin:0 0.25em;
	position: relative;
	padding-left: 1.5em;
	border:1px solid rgba(0,0,0,0);
}
.smt-label-checkbox:before {
	content:'';
	display:block;
	position: absolute;
	width:1em;
	height: 1em;
	background: lighten($linkColor,30%);
	border-radius: 2px;
	left: 0;
	top: .2em;
}
.smt-checkbox:checked + .smt-label-checkbox:after {
	content:'\00D7';
	color: $linkColor;
	position: absolute;
	font-size: 1.5em;
	left: 0.1em;
	top: -0.1em;
	line-height: 1em;
}

.smt-checkbox:focus + .smt-label-checkbox {
	border:1px dotted $linkColor;
}

.smt-label-warn {
	text-align: left;
	display: block;
	padding-left: 1.2rem;
	font-size: 0.875em;
	line-height: 1;
	margin-top: 0.5em;
}

.smt-form-action {
	@include smt-simple-link;
	display: block;
	margin-bottom: 0.5em;
}

.smt-label-checkbox ~ .smt-input {
	display: inline-block;
	width: auto;
	margin-left: 1em;
}

/* ==========================================================================
   header & menu
   ========================================================================== */
.smt-skipnav {
	display: none !important;
}
.smt-skipnav.focused {
	clip: auto;
	height: auto;
	width: auto;
	right: 0;
	background: #fff;
	z-index: 30;
	top: 0;
	counter-reset: list;
	li {
		list-style-type: none;
		:before {
			counter-increment: list;
			content: 'alt + ' counter(list) ". ";
			font-weight: normal;
			color: $textColor;
		}
	}
}

.smt-header {
	padding-top:1.125em;
	position: relative;
	@include fs_row;
	z-index: 20;
	.smt-header-logo {
		@include fs_grid_cell;
		@include fs_cell_lg(6);
		@include fs_cell_md(3);
		@include fs_cell_sm(1,2);
	}
	.smt-header-actions {
		@include fs_grid_cell;
		@include fs_cell_lg(6);
		@include fs_cell_md(3);
		@include fs_cell_sm(1,2);
		display: flex;
		justify-content: flex-end;
		align-items:center;
		text-align: right;
		& > * {
			margin-left:1em;
			flex-basis:auto;
			@media screen and ($fs-grid-mq-max-lg) {
				margin-left: 1.5em;
			}
		}
	}
	.smt-search-holder {
		width:18em;
		@media screen and ($fs-grid-mq-max-lg) {
			width:auto;
		}
	}
}

.smt-menu {
	position:fixed;
	height:100%;
	width:100%;
	top:-100%;
	left:0;
	margin:0;
	opacity: 0;
	padding:10vh 0 0;
	transition:transform 0.5s ease-out 0.5s, opacity 0.5s;
	text-align: center;
	z-index:5;
	@include background-opacity(#91c5ee, 0.95);
	.smt-menu-toggle:checked ~ & {
		transition:transform 0s, opacity 0.5s;
		transform:translateY(100%);
		opacity: 1;
	}
	.smt-menu-item {
		list-style-type: none;
	}
	.smt-menu-logo {
		@include fs_row;
		margin-top:calc(-10vh + 1.125em + 3px);
		margin-bottom: 3em;
	}
	.smt-logo { 
		background-image: url(../img/logo-smart-white.svg);
	}
	.smt-menu-logo-wrapper {
		@include fs_grid_cell;
	}
	.smt-menu-link {
		font-size:2.5em;
		font-weight: bolder;
		color:#ffffff;
		text-decoration: none;
		@media screen and ($fs-grid-mq-max-lg) {
			font-size: 2em;
		}
	}

}

.smt-toggler-menu {
	&:before {
		background:url(../img/icon-menu.svg) no-repeat center center;
	}
	position: relative;
	z-index: 10;
	.smt-menu-toggle:checked ~ & {
		color: #ffffff;
		outline-color: #ffffff !important; 
		&:before {
			background-image:url(../img/icon-close.svg);
		}
	}
}

.smt-toggler-login {
	&:before {
		background:url(../img/icon-login.svg) no-repeat center center;
	}
}

.smt-toggler-logged {
	transition: background-color 0.2s linear;
	border-top-right-radius: 0.5em;
	border-top-left-radius: 0.5em;
	text-indent: -9999px;
	&:after {
		content: "";
		position: absolute;
		border-style: solid;
		border-width: 0.6em 0.4em 0;
		border-color: $linkColor transparent;
		right: 1em;
		top: 0.75em;
	}
	&:before {
		background:url(../img/icon-logged.png) no-repeat center center;
		background-size: contain;
		width: 2em;
		height: 2.4em;
		left: 1em;
	}
	.smt-toggler:checked ~ & {
		background-color: lighten($laranjaSmart, 10%);
		transition: 0.2s linear 0.2s;
		&:after {
			border-width: 0 0.4em 0.6em;
			border-color: #ffffff transparent;
		}
	}
	@media screen and ($fs-grid-mq-max-lg) {
		&:before {
			left: -0.5em;
		}
		&:after {
			transition: none;
			border-color: transparent;
			top: calc(100% + 2em);
		}
		.smt-toggler:checked ~ & {
			background-color: transparent;
			&:after {
				transition: 0.1s linear 0.2s;
				border-width: 0 0.6em 0.8em;
				border-color: #e8b9a4 transparent;
				right: 0.1em;
				top: calc(100% + 0.35em);
			}
		}
	}
}
.smt-drop-menu {
	margin: 0;
	position: absolute;
	max-height: 0;
	min-width: 8em;
	overflow: hidden;
	text-align: left;
	ul {
		background-color: lighten($laranjaSmart, 10%);
		border-radius: 0.5em;
		border-top-left-radius: 0;
		margin: 0;
		padding: 1em;
	}
	li {
		list-style-type: none;
		.smt-icon-toggler {
			color: #ffffff;
			padding: 0.5em 0;
		}
		.smt-logged-logout {
			color: #ffffff;
			text-decoration: none;
			font-weight: bold;
			padding: 0.5em 0;
			display: inline-block;
			&:focus {
				outline: 1px dotted #69b8a4;
			}
		}
		.smt-logged-item {
			transition: color 0.3s;
			text-decoration: none;
			font-weight: bolder;
			color: #ffffff;
			padding: 0.5em 0;
			display: inline-block;
		}
	}
	.smt-toggler:checked ~ & {
		max-height: 12em;
		transition: 0.2s linear 0.2s;
	}
	@media screen and ($fs-grid-mq-max-lg) {
		min-width: 10em;
		right: 0;
		top: calc(100% + 0.25em);
		text-align: right;
		ul {
			border-radius: 0.5em;
		}
		li .smt-icon-toggler {
			width: 100%;
			text-indent: 0;
			text-align: right;
		}
	}
}

.smt-toggler-search {
	&:before {
		background:url(../img/icon-search-toggler.svg) no-repeat center center;
	}
}

.smt-toggler-search {
	display: none;
}
@media screen and ($fs-grid-mq-max-lg) {
	.smt-toggler-search {
		display: block;
	}
	.smt-search-form {
		opacity: 0;
		position: absolute;
		clip: rect(0 0 0 0);
		height: 1px;
		width: 1px;
		transition:all 0.5s ease-out 0.5s, opacity 0.5s;
	}
	.smt-toggler:checked ~ .smt-search-form,
	.focused .smt-search-form {
		display: block;
		width: 100%;
		left: 0;
		bottom: -4em;
		padding: 0.5em;
		border: 1px solid $textColor;
		background: #fff;
		border-radius:2em;
		opacity: 1;
		height:auto;
		clip:auto;
		transition:all 0s, opacity 0.5s;
		z-index: 9;
		&:before,
		&:after {
			display: block;
			content:'';
			width: 0;
			height: 0;
			border-style: solid;
			border-width: 0 0.5em 1em 0.5em;
			border-color: transparent transparent $textColor transparent;
			position: absolute;
			top: -1em;
			right: 5.6em;
		}
		&:after {
			border-color: transparent transparent #ffffff transparent;
			top: calc(-1em + 2px);
		}
	}
}

.noscroll {
	position: fixed;
	overflow-y:scroll
}


/* ==========================================================================
   Carrossel principal
   ========================================================================== */
.smt-carousel, .smt-section-hero {
	@include fs_row;
	@include marginGrids(3em, 0);
	@media screen and ($fs-grid-mq-max-lg) {
		@include marginGrids(1.5em, 0);
	}
	@media screen and ($fs-grid-mq-min-lg) {
		.slick-prev {
			left: -9.375%;
		}
		.slick-next {
			right: -9.375%;
		}
	}
}

.smt-carousel-items, .smt-hero-wrapper {
	list-style-type: none;
	@include marginGrids(0);
	@include fs_grid_cell;
	@include fs_cell_lg(10);
	@include fs_push_lg(1);
	padding:0 1em;
	@media screen and ($fs-grid-mq-max-lg) {
		text-align:center;
	}
	@media screen and ($fs-grid-mq-max-md) {
		padding:0 1.5em;
	}
}

.smt-carousel-slide, .smt-hero-holder {
	position: relative;
	width:100%;
	.smt-carousel-content, .smt-hero-content {
		display: inline-block;
		vertical-align: bottom;
		width:60%;
        p:last-child {
            margin-bottom: 3em;
			@media screen and ($fs-grid-mq-max-xl) {
                margin-bottom: 2em;   
            }
        }
        @media screen and ($fs-grid-mq-max-xl) {
			width:55%;
		}
		@media screen and ($fs-grid-mq-max-lg) {
			width:100%;
		}
	}
	.smt-carousel-image, .smt-hero-image {
		display: inline-block;
		vertical-align: bottom;
		width:40%;
		@media screen and ($fs-grid-mq-max-xl) {
			width:45%;
		}
		@media screen and ($fs-grid-mq-max-lg) {
			width:auto;
			max-width:100%;
		}
		@media screen and ($fs-grid-mq-max-md) {
			width:100%;
			max-width:320px;
		}
	}
}

.smt-carousel-title, .smt-hero-title {
	color:$textColor;
	font-weight: normal;
	font-size: 3.375em;
	line-height: 1;
	margin:0;
	&:last-child {
		margin-bottom: 1em;
	}
	@media screen and ($fs-grid-mq-max-lg) {
		font-size: 2.5em;
	}
	& ~ p {
		color: $textColor;
		margin-top:0.5em;
		line-height: 1.2;
		&:last-child {
			margin: 1em 0 3em;
		}
	}
	& ~ .smt-main-button {
		font-size: 1.294em;
		margin-bottom: 1em;
		@media screen and ($fs-grid-mq-max-md) {
			font-size:1.1em;
		}
	}
	& + .smt-main-button {
		margin: 1em 0 2em;
	}
	.smt-client-name {
		display: block;
		font-weight: bold;
	}
}

.smt-section-hero {
	.selectize-control {
		position: relative;
		z-index: 20;
		margin: 2em auto 2em 0; 
		max-width: 300px;
		@media screen and ($fs-grid-mq-max-lg) {
			margin-left: auto;
		}
	}
}

/* ==========================================================================
   Escolha de áreas
   ========================================================================== */
.smt-roles {
	@include fs_row;
	display: flex;
	@media screen and ($fs-grid-mq-max-lg) {
		display: block;
		position: relative;
		padding-top: 0;
	}  
}

.smt-role-item {
	@include fs_grid_cell;
	@include fs_grid_cell_padded;
	@include fs_cell_lg(5);
	@include fs_cell_md(1,1);
	@include fs_cell_sm(1,1);
	background: $azulBgSmart;
	position: relative;
	z-index: 2;
	transition:background 0.5s;
	padding-top:1.5em;
	padding-bottom: 1.5em;
	@media screen and ($fs-grid-mq-max-lg) {
		position: static;
		border-radius:0 !important;
		padding-top:0em;
		padding-bottom: 0em;
	}
	.smt-role-links {
		@media screen and ($fs-grid-mq-min-lg) {
			opacity: 0;
			transform:translateY(2rem);
			transition:all 0.3s;
			margin-left: -0.5em;
		}
		@media screen and ($fs-grid-mq-max-lg) {
			margin:0.5em 0 0;
			padding:1em 0 0;
			width:100%;
			border-top:1px solid $linkColor;
			text-align: center;
		}
	}
	&:first-child {
		@include fs_push_lg(1);
		border-radius: 5px 0 0 5px;
	}
	&:nth-child(2) {
		border-radius: 0 5px 5px 0;
	}
	@media screen and ($fs-grid-mq-min-lg) {
		&:hover,
		&.focused {
			background:lighten($azulBgSmart,5%);
			.smt-role-links {
				opacity: 1;
				transform:translateY(0);
			}
			.smt-role-title,
			.smt-role-content p {
				transform:translateY(0);   
			}
		}
	}
}

.smt-role-title {
	padding-left:40%;
	padding-right:2em;
	text-transform: uppercase;
	font-weight: bold;
	color: $azulSmart;
	font-size: 1.5em;
	margin:0 0 -0.8em;
	display: block;
	transform:translateY(1rem);
	transition:transform 0.3s;
	@media screen and ($fs-grid-mq-max-xl) {
		padding-left:35%;
	}
	@media screen and ($fs-grid-mq-max-lg) {
		padding: 0.3em 1em;
		position: absolute;
		transform: none;
		top: -1.5em;
		background: $azulBgSmart;
		left: 0;
		width: 47%;
		text-align: center;
		z-index: 2;
		font-size: 1.2em;
		&[for="smt-role-client"] {
			&:after {
				content:'';
				display: block;
				position:absolute;
				height: 100%;
				width: 15%;
				right: -8%;
				background: $azulBgSmart;
				top: 0;
				transform: skew(30deg);
			}
		}
		&[for="smt-role-provider"] {
			left:auto;
			right: 0;
			&:after {
				content:'';
				display: block;
				position:absolute;
				height: 100%;
				width: 15%;
				left: -8%;
				background: $azulBgSmart;
				top: 0;
				transform: skew(-30deg);
			}
		}
		.smt-role-toggler:not(:checked) ~ & {
			z-index: 1;
			background:darken($azulBgSmart,10%);
			&:after {
				background:darken($azulBgSmart,10%);
			}
		}
		.smt-role-toggler:focus ~ &:before {
			content:'';
			display: block;
			position: absolute;
			width: 108%;
			height: 100%;
			top: 0;
			left: 0;
			border: 1px dotted $linkColor;
			z-index: 4;
		}
		#smt-role-provider:focus ~ &:before {
			left:auto;
			right: 0;
		}
	}
}

.smt-role-content {
	padding-left: 40%;
	padding-right:2em;
	@media screen and ($fs-grid-mq-max-xl) {
		padding-left:35%;
	}
	.smt-role-image {
		position: absolute;
		top:50%;
		left:3em;
		width: 25%;
		transform:translateY(-50%);
		@media screen and ($fs-grid-mq-max-xl) {
			left:1.5em;
		}
		@media screen and ($fs-grid-mq-max-lg) {
			position: static;
			width:5em;
			height:5em;
			flex-basis:auto;
			transform:none;
		}
	}
	p {
		line-height: 1.2;
		transform:translateY(1rem);
		transition:transform 0.3s;
	}
	@media screen and ($fs-grid-mq-max-lg) {
		display:none;
		max-width: 320px;
		margin: 0 auto;
		padding:1em 0;
		.smt-role-toggler:checked ~ & {
			display: flex;
			flex-wrap: wrap;
			align-items:center;
		}
		p { 
			transform: none;
			width: calc(100% - 6em);
			margin-left: 1em;
		}
	}
}


.smt-breadcrumb {
	@include fs_row;
	margin-bottom: -4em;
	.smt-breadcrumb-list {
		margin: 0;
		@include fs_grid_cell;
		@include fs_cell_lg(10);
		@include fs_push_lg(1);
		background-color: ($azulBgSmart);
		padding: 0.5em 1.5em;
		border-radius: 10em;
		box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.2);
		position: relative;
		z-index: 10;
	}
	li {
		list-style-type: none;
		display: inline-block;
		color: $azulSmart;
		font-size: 1em;
		&:after {
			content: ">>";
			display: inline-block;
			font-size: 0.85em;
			letter-spacing: -2px;
			margin: 0 0.25em 0 0.4em;
		}
		&:last-child:after {
			content: none;
		}
	}
	@media screen and ($fs-grid-mq-max-lg) {
		margin-bottom: -2.5em;
	}
	@media screen and ($fs-grid-mq-max-md) {
		.smt-breadcrumb-list {
			border-radius: 6px;
		}
	}
}


