/* ==========================================================================
   alertas e mensagens
   ========================================================================== */

.smt-warning {
	display: none;
	width: 460px;
	margin: 1em auto;
	padding: 1em;
	border: solid 2px;
	border-radius: 1em;
	background-color: #ffffff;
	label {
		font-size: 1.2em;
		text-align: center;
		text-transform: uppercase;
		display: block;
		margin-bottom: 0.5em;
	}
	p {
		margin: 0;
		+ & {
			margin-top: 0.5em;
		}
	}
	*:last-child {
		margin-bottom: 0;
	}
	&.open {
		display: block;
		&.success ~ .smt-modal-body, &.success ~ form {
			display: none;
		}
	}
	&.success {
		border-color: $linkColor;
		label {
			color: $linkColor;
		}
	}
	&.error {
		text-align: center;
		color: $laranjaSmart;
		border-color: $laranjaSmart;
	}
}

.smt-message-error {
	font-size: 0.9em;
	line-height: 1;
	color: $laranjaSmart;
	text-align: left;
	display: block;
	padding: 0.25em 1.2rem 0;
}


/* ==========================================================================
   loader
   ========================================================================== */

@keyframes spin {
	0% {
		transform: rotate(0deg);
	}
	100% {
		transform: rotate(360deg);
	}
}
.loading {
	color: #69b8a4;
	position: relative;
	pointer-events: none;
	user-select: none;
	&:before {
		content: "";
		position: absolute;
		width: 1.625rem;
		height: 1.625rem;
		border: 6px solid #b0ecdd;
		border-top-color: #ffffff;
		border-radius: 50%;
		animation: spin 1.6s infinite linear;
	    top: calc(50% - 0.8125rem);
	    left: calc(50% - 0.8125rem);
	    transition: 0.4s linear;
	}
	&:hover {
		background-color: #69b8a4;
		border-color: #69b8a4;
	}
}